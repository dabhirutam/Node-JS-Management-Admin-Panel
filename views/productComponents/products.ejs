<!-- ======= HTML Head ======= -->
<%- include('../components/htmlHead') %>

<body>
    
<!-- ======= Header ======= -->
<%- include('../components/header') %>
<!-- End Header -->

<!-- ======= Sidebar ======= -->
<%- include('../components/sidebar') %>
<!-- End Sidebar-->

<!-- ======= Main ======= -->
<main id="main" class="main">
    <div class="container mt-4">
        <h2 class="text-center mb-4">All Products</h2>
        <div class="row row-gap-3">
            <% products.forEach(prod => { %>
                <div class="col-md-4">
                    <div class="card p-2">
                        <img src="<%= prod.image %>" class="card-img-top object-fit-cover" style="width: 100%;aspect-ratio: 3/2;" alt="Product Image">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= prod.name %></h5>
                            <p class="card-text">$<%= prod.price %></p>
                            <div class="d-flex align-items-center justify-content-between">
                                <a href="/products/editProduct/<%= prod._id %>" class="btn btn-primary">Edit</a>
                                <a href="/products/deleteProduct/<%= prod._id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</main>
<!-- End Main -->

<!-- ======= Footer ======= -->
<%- include('../components/footer') %>
<!-- End Footer -->
 
<!-- Vendor JS Files -->
<%- include('../components/scripts') %>

</body>

</html>
