<!-- ======= HTML Head ======= -->
<%- include('../components/htmlHead') %>

<body>

    
<!-- ======= Header ======= -->
<%- include('../components/header') %>
<!-- End Header -->

<!-- ======= Sidebar ======= -->
<%- include('../components/sidebar') %>
<!-- End Sidebar-->

<!-- ======= Main ======= -->
<main id="main" class="main">
    <div class="container mt-4">
        <h2 class="text-center mb-4">ActiveLog</h2>
    
        <table class="table table-striped table-bordered text-center">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Acticity</th>
                    <th>ID</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <% activeLogs.forEach((log, i) => { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= log.message %></td>
                        <td><%= log._id %></td>
                        <td><%= new Date(log.createdAt).toLocaleString('en-US', {
                            weekday: 'long', year: 'numeric', month: 'long',
                            day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true,
                          }) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</main>
<!-- End Main -->

<!-- ======= Footer ======= -->
<%- include('../components/footer') %>
<!-- End Footer -->
 
<!-- Vendor JS Files -->
<%- include('../components/scripts') %>

</body>

</html>
